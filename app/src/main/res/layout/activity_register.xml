<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundall"
    tools:context="com.example.amr.sunbula.RegisterActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageregister"
            android:layout_width="@dimen/_120dp"
            android:layout_height="@dimen/_120dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="@dimen/_8dp"
            android:src="@drawable/circle_shape"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="@dimen/_16dp"
            android:background="#BB000000"
            android:orientation="vertical"
            android:padding="@dimen/_8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageregister">

            <EditText
                android:id="@+id/txtusernameregister"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginBottom="@dimen/_5dp"
                android:background="@null"
                android:drawableLeft="@drawable/usernameimage"
                android:drawablePadding="@dimen/_15dp"
                android:gravity="left"
                android:hint="Username"

                android:inputType="textPersonName"
                android:padding="@dimen/_15dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="@color/tab_enable" />

            <EditText
                android:id="@+id/txtpasswordregister"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginBottom="@dimen/_5dp"
                android:background="@null"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="@dimen/_15dp"
                android:gravity="left"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="@dimen/_15dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="@color/tab_enable" />

            <EditText
                android:id="@+id/txtemailregister"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginBottom="@dimen/_5dp"
                android:background="@null"
                android:drawableLeft="@drawable/message"
                android:drawablePadding="@dimen/_15dp"
                android:gravity="left"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="@dimen/_75dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorAccent"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

        <TextView
            android:id="@+id/txt_or"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="@dimen/_8dp"
            android:gravity="center"
            android:text="Or"
            android:textColor="#ffffff"
            android:textSize="@dimen/_20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_register" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_login_facebok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="@dimen/_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_or"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_to_changeimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8dp"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_marginRight="@dimen/_8dp"
            android:layout_marginTop="@dimen/_8dp"
            android:text="Upload image"
            android:textColor="#AAffffff"
            app:layout_constraintBottom_toBottomOf="@+id/imageregister"
            app:layout_constraintLeft_toLeftOf="@+id/imageregister"
            app:layout_constraintRight_toRightOf="@+id/imageregister"
            app:layout_constraintTop_toTopOf="@+id/imageregister" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>