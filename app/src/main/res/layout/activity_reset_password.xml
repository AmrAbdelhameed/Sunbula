<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundall"
    tools:context="com.example.amr.sunbula.ResetPasswordActivity">

    <ImageView
        android:id="@+id/imageresetpassword"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textforgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageresetpassword"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="Forget password"
        android:textColor="#ffffff"
        android:textSize="@dimen/_30ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageresetpassword" />

    <TextView
        android:id="@+id/textcanreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="you can reset password."
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textforgetpassword" />

    <Button
        android:id="@+id/btn_resetpassword"
        android:layout_width="0dp"
        android:layout_height="@dimen/_75sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@color/colorAccent"
        android:text="Request password reset"
        android:textAllCaps="false"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="#BB000000"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textcanreset">

        <EditText
            android:id="@+id/txtemailresetpassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@null"
            android:drawableLeft="@drawable/message"
            android:drawablePadding="@dimen/_15sdp"
            android:gravity="left"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_15sdp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>