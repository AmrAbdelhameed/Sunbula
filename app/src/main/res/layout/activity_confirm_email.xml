<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundall"
    tools:context="com.example.amr.sunbula.ConfirmEmailActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageconfirm"
            android:layout_width="@dimen/_120dp"
            android:layout_height="@dimen/_120dp"
            android:layout_marginTop="@dimen/_8dp"
            android:src="@drawable/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textconfirmcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageconfirm"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8dp"
            android:text="Confirm code"
            android:textColor="#ffffff"
            android:textSize="@dimen/_25sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageconfirm" />

        <TextView
            android:id="@+id/textcontinueconfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageconfirm"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_marginLeft="@dimen/_8dp"
            android:layout_marginRight="@dimen/_8dp"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginTop="@dimen/_8dp"
            android:gravity="center"
            android:text="In order to continue. you must confirm your email address :"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textconfirmcode" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24dp"
            android:background="#BB000000"
            android:orientation="vertical"
            android:padding="@dimen/_8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textcontinueconfirm">

            <EditText
                android:id="@+id/txtconfirmcontinue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginBottom="@dimen/_5dp"
                android:background="@null"
                android:drawableLeft="@drawable/_eye"
                android:drawablePadding="@dimen/_15dp"
                android:gravity="left"
                android:hint="Enter your confirm code"
                android:inputType="text"
                android:padding="@dimen/_15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="0dp"
            android:layout_height="@dimen/_75dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:background="@color/colorAccent"
            android:text="Continue"
            android:textAllCaps="false"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>