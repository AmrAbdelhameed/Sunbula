<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroundall"
    tools:context="com.example.amr.sunbula.ConfirmEmailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageconfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textconfirmcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageconfirm"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Confirm code"
                android:textColor="#ffffff"
                android:textSize="40dip" />

            <TextView
                android:id="@+id/textcontinueconfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageconfirm"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="In order to continue. you must confirm your email address :"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp" />

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="vertical"
            android:padding="8dp">

            <EditText
                android:id="@+id/txtconfirmcontinue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/_eye"
                android:drawablePadding="16sp"
                android:ems="10"
                android:gravity="left"
                android:hint="Enter your confirm code"
                android:inputType="text"
                android:padding="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/holo_orange_dark"
                android:padding="20dp"
                android:text="Continue"
                android:textAllCaps="false"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
